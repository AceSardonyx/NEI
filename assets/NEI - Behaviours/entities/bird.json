{
  "format_version": "1.16.0",
  "minecraft:entity": {
    "description": {
      "identifier": "mb:bird",
      "is_spawnable": true,
      "is_summonable": true,
      "is_experimental": false
    },

    "component_groups": {
      "mb:blue": {
        "minecraft:variant": { "value": 0 }
      },
      "mb:cyan": {
        "minecraft:variant": { "value": 1 }
      },
      "mb:green": {
        "minecraft:variant": { "value": 2 }
      },
      "mb:magenta": {
        "minecraft:variant": { "value": 3 }
      },
      "mb:orange": {
        "minecraft:variant": { "value": 4 }
      },
      "mb:red": {
        "minecraft:variant": { "value": 5 }
      },

      "mb:adult": {
         "minecraft:experience_reward": {
          "on_bred": "Math.Random(1,3)",
          "on_death": "query.last_hit_by_player ? Math.Random(1,1) : 0"
        },
        "minecraft:loot": {
          "table": "loot_tables/empty.json"
        }
      },

      "mb:wild": {
        "minecraft:behavior.random_fly": {
          "priority": 2,
          "xz_dist": 15,
          "y_dist": 1,
          "y_offset": 0,
          "speed_multiplier": 1.0,
          "can_land_on_trees": true,
          "avoid_damage_blocks": true
        },
        "minecraft:behavior.follow_mob": {
          "priority": 3,
          "speed_multiplier": 1.0,
          "stop_distance": 3,
          "search_range": 20
        },
        "minecraft:behavior.avoid_mob_type": {
          "priority": 4,
          "entity_types":[
           {
             "filters": { "test" :  "is_family", "subject" : "other", "value" :  "player"},
             "max_dist": 6,
             "walk_speed_multiplier": 0.7,
             "sprint_speed_multiplier": 0.8
           }
         ]
       } 
     },

      "mb:look_for_tree": {
         "minecraft:behavior.move_to_block": {
           "priority": 10,
           "tick_interval": 1,
           "start_chance": 0.1,
           "search_range": 12,
           "search_height": 31,
           "goal_radius": 1.0,
           "stay_duration": 20.0,
           "target_selection_method": "random",
           "target_offset": [0.25, 0.25, 0.25],
           "target_blocks": [
             "minecraft:leaves",    
             "minecraft:leaves2", 
             "minecraft:deadbush",
             "minecraft:sweet_berry_bush"
           ],
           "on_stay_completed": [
             {
               "event": "mb:find_tree_timeout",
               "target": "self"
               }
             ]
           },
           "minecraft:timer": {
             "looping": true,
             "time": 180,
             "time_down_event": {
               "event": "mb:find_tree_timeout"
              }
            }
         },

       "mb:waiting": {
         "minecraft:timer": {
           "looping": true,
           "time": 90,
           "time_down_event": {
             "event": "mb:waiting_timeout"
             }
           }
        }
    },

    "components": {
      "minecraft:type_family": {
         "family": [ "bird", "mob" ]
      },
      "minecraft:breathable": {
        "total_supply": 15,
        "suffocate_time": 0
      },
      "minecraft:scale": {
        "value": 1.5
      },
      "minecraft:collision_box": {
        "width": 0.4,
        "height": 0.9
      },
      "minecraft:nameable": {
      },
      "minecraft:health": {
        "value": 8,
        "max": 8
      },
      "minecraft:hurt_on_condition": {
        "damage_conditions": [
          {
            "filters": { "test": "in_lava", "subject": "self", "operator": "==", "value": true },
            "cause": "lava",
            "damage_per_tick": 4
          }
        ]
      },
      "minecraft:movement": {
        "value": 0.44
      },
      "minecraft:damage_sensor": {
        "triggers": {
          "cause": "fall",
          "deals_damage": false
        }
      },
      "minecraft:jump.static": {
      },
      "minecraft:can_fly": {
      },
      "minecraft:navigation.fly": {
        "can_path_over_water": true,
        "can_path_from_air": true
      },
      "minecraft:movement.fly": {
      },
      "minecraft:physics": {
      },
      "minecraft:pushable": {
        "is_pushable": true,
        "is_pushable_by_piston": true
      },
      "minecraft:despawn": {
        "despawn_from_distance": {}
      },
      "minecraft:behavior.float": {
        "priority": 0
      },
      "minecraft:behavior.panic": {
        "priority": 0,
        "speed_multiplier": 1.3
      },
      "minecraft:behavior.look_at_player": {
        "priority": 1,
        "look_distance": 12.0
      }
    },

    "events": {
     "mb:find_tree_timeout": {
       "remove": {
         "component_groups": [
           "mb:look_for_tree"
          ]
        },
        "add": {
          "component_groups": [
            "mb:waiting"
         ]
       }
     },
     "mb:waiting_timeout": {
       "remove": {
         "component_groups": [
           "mb:waiting"
          ]
        },
        "add": {
          "component_groups": [
            "mb:look_for_tree"
         ]
       }
     },
      "minecraft:entity_spawned": {
       "sequence": [
        {
         "randomize": [
          {
            "weight": 20,
            "add": {
              "component_groups": [
                "mb:blue",
                "mb:adult"
              ]
            }
          },
          {
            "weight": 20,
            "add": {
              "component_groups": [
                "mb:cyan",
                "mb:adult"
              ]
            }
          },
          {
            "weight": 20,
            "add": {
              "component_groups": [
                "mb:green",
                "mb:adult"
              ]
            }
          },
          {
            "weight": 20,
            "add": {
              "component_groups": [
                "mb:magenta",
                "mb:adult"
              ]
            }
          },
          {
            "weight": 20,
            "add": {
              "component_groups": [
                "mb:orange",
                "mb:adult"
              ]
            }
          },
          {
            "weight": 20,
            "add": {
              "component_groups": [
                "mb:red",
                "mb:adult"
              ]
            }
          }
        ]
        },
        {
          "add": {
           "component_groups": [
             "mb:look_for_tree",
             "mb:wild"
            ]
          }
        }
       ]
      }
 
    }
  }
}
